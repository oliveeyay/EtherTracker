<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".activities.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activity_main_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/activity_main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_main_image"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            <LinearLayout
                android:id="@+id/activity_main_edittext_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_main_text"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:descendantFocusability="beforeDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/activity_main_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_main_buying_value"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/activity_main_edittext_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onSaveButtonClicked"
                    android:text="@string/activity_main_save" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/activity_main_notification_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_main_edittext_layout"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/activity_main_persistent_notification" />

            <TextView
                android:id="@+id/activity_radio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_main_notification_checkbox"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/activity_main_source" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_radio_text"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/activity_main_radio_polionex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onRadioButtonClickedPolionex"
                    android:text="@string/activity_main_polionex" />

                <RadioButton
                    android:id="@+id/activity_main_radio_coinmarketcap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClickedCoinMarketCap"
                    android:text="@string/activity_main_coinmarketcap" />

                <RadioButton
                    android:id="@+id/activity_main_radio_kraken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClickedKraken"
                    android:text="@string/activity_main_kraken" />
            </RadioGroup>

            <TextView
                android:id="@+id/activity_donation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:onClick="onDonationClicked"
                android:text="@string/activity_main_donation" />

        </RelativeLayout>
    </ScrollView>
</layout>
